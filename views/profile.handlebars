<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{full_name}}!</h2>
  </div>
</div>

<div class="user-dashboard block">
    <button class="basal-metabolic-rate button is-link is-light" id="bmr">BMR</button>
    <button class="tdee button is-link is-light" id="tdee">Total Daily Energy Expenditure</button>
    <button class="caloric-needs button is-link is-light" id="caloric-needs">Caloric Needs</button>
    <button class="ideal-weight button is-link is-light" id="ideal-weight">Ideal Body Weight</button>
    <button class="button is-link is-light" id="newWorkoutBtn">Add a New Workout</button>
</div>


<form id="newWorkoutForm" class="form new-workout-form box">
  <button id="hideWorkoutForm" class="delete"></button>
  <div class="workout-group">
    <label for="workout-name">Workout Name</label>
    <input class="form-input" type="text" id="workout-name" />
  </div>
  <div class="workout-group">
    <label for="workout-reps">Number of Reps</label>
    <input class="form-input" type="number" id="workout-reps" />
  </div>
  <div class="workout-group">
    <label for="workout-sets">Number of Sets</label>
    <input class="form-input" type="number" id="workout-sets" />
  </div>
  <div class="workout-group">
    <label for="workout-muscle-group">Muscle Group</label>
    <input class="form-input" type="text" id="workout-muscle-group" />
  </div>
  <div class="workout-group">
    <label for="workout-equipment">Equipment Needed</label>
    <input class="form-input" type="text" id="workout-equipment" />
  </div>
  <div class="workout-group">
    <label for="workout-difficulty">Difficulty</label>
    <input class="form-input" type="text" id="workout-difficulty" />
  </div>
  <div class="workout-group">
    <label for="workout-instructions">Instructions</label>
    <input class="form-input" type="text" id="workout-instructions" />
  </div>
  <div class="new-workout-btn">
    <button id="new-workout-btn" class="button is-info" type="submit">Create workout!</button>
  </div>
</form>
    
<div class="past-workouts" style="height:1000px;width:500px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;">
  <div class="previous-workouts"></div>
    {{#each workouts as |workout|}}
      <div class="workout-card">
        <div class="workout-card-header">
          {{workout.name}}
        </div>
        <div class="card-body">
          <p>
            {{workout.instructions}}
          </p>
          <p>
            {{workout.reps}}
          </p>
          <p>
            {{workout.sets}}
          </p>
          <p>
            {{workout.equipment}}
          </p>
          <p>
            {{workout.muscle_group}}
          </p>
          <p>
            {{workout.difficulty}}
          </p>
        </div>
      </div>
    {{/each}}
</div>

<script src="/js/profile.js"></script>

